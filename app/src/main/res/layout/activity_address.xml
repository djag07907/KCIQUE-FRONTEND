<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_gravity="center"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_addresses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:fontFamily="sans-serif"
        android:gravity="center|start"
        android:paddingTop="3dp"
        android:text="Mis Direcciones"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <LinearLayout
        android:id="@+id/UserPasswordContent"
        android:layout_width="400dp"
        android:layout_height="590dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="48dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <EditText
                android:id="@+id/txt_country"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                android:inputType="text"
                android:hint="Pais"/>

            <EditText
                android:id="@+id/txt_departament"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="87dp"
                android:inputType="text"
                android:hint="Departamento"/>

            <EditText

                android:id="@+id/txt_city"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="162dp"
                android:inputType="text"
                android:hint="Ciudad"/>

            <EditText

                android:id="@+id/txt_street"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="237dp"
                android:inputType="text"
                android:hint="Calle"/>

            <EditText

                android:id="@+id/txt_housenumber"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="312dp"
                android:inputType="number"
                android:hint="Numero de Casa"/>

            <EditText

                android:id="@+id/txt_postalcode"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="387dp"
                android:inputType="number"
                android:hint="Código Postal"/>

            <Button
                android:id="@+id/button_myadresses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="450dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:layout_marginStart="125dp"
                android:layout_marginEnd="125dp"
                android:text="Añadir"
                android:textStyle="bold"
                app:backgroundTint="@color/black" />






        </androidx.cardview.widget.CardView>

    </LinearLayout>


